{
  "table_name": "role_permissions",
  "description": "Tabel junction untuk many-to-many relationship antara roles dan permissions",
  "phase": "phase_3",
  "columns": {
    "id": {
      "type": "BIGINT",
      "unsigned": true,
      "auto_increment": true,
      "primary_key": true,
      "description": "Primary key untuk tabel role_permissions"
    },
    "role_id": {
      "type": "BIGINT",
      "unsigned": true,
      "not_null": true,
      "description": "Foreign key ke tabel roles",
      "references": "roles(id)"
    },
    "permission_id": {
      "type": "BIGINT",
      "unsigned": true,
      "not_null": true,
      "description": "Foreign key ke tabel permissions",
      "references": "permissions(id)"
    },
    "created_at": {
      "type": "TIMESTAMP",
      "default": "CURRENT_TIMESTAMP",
      "not_null": true,
      "description": "Waktu permission diassign ke role"
    }
  },
  "constraints": {
    "unique_constraints": [
      {
        "name": "uk_role_permissions_role_permission",
        "columns": ["role_id", "permission_id"],
        "description": "Role tidak bisa memiliki permission yang sama dua kali"
      }
    ],
    "foreign_key_constraints": [
      {
        "name": "fk_role_permissions_role_id",
        "column": "role_id",
        "references": "roles(id)",
        "on_delete": "CASCADE",
        "on_update": "CASCADE"
      },
      {
        "name": "fk_role_permissions_permission_id",
        "column": "permission_id",
        "references": "permissions(id)",
        "on_delete": "CASCADE",
        "on_update": "CASCADE"
      }
    ]
  },
  "junction_table_properties": {
    "unique_combination": {
      "columns": ["role_id", "permission_id"],
      "enforcement": true,
      "description": "Setiap role-permission combination harus unik"
    }
  },
  "security": {
    "system_role_protection": {
      "enabled": true,
      "description": "System roles tidak bisa dihapus permissionsnya"
    },
    "permission_inheritance": {
      "enabled": false,
      "description": "Tidak ada inheritance - explicit assignment only"
    }
  }
}